        <RadioButton x:Name="footLongRadioButton3" Content="Foot Long Sub ( $ 5.00 )" HorizontalAlignment="Left" Margin="1032,280,0,0" VerticalAlignment="Top" GroupName="size" FontSize="36"/>
        <CheckBox x:Name="AmericanCheckBox" Content="American ( + $.25)" HorizontalAlignment="Left" Margin="864,0,0,0" VerticalAlignment="Center" FontSize="24"/>
        <CheckBox x:Name="swissCheckBox1" Content="Swiss (+ $.30 )" HorizontalAlignment="Left" Margin="870,531,0,0" VerticalAlignment="Top" FontSize="24"/>
